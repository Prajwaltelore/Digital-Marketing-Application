<!-- Contact End -->
<script>

    $(document).ready(function () {
        $("#enquiry").click(function () {
            let data = {
                name: $("#name").val(),
                email: $("#email").val(),
                subject: $("#subject").val(),
                message: $("#message").val()
            }
            $.ajax({
                url: "/enquiries/enquiry",
                method: "post",
                dataType: "json",
                data: data,
                success: function (response) {
                    if (response.status) {
                        Swal.fire({
                            title: 'Enquiry received successful',
                            text: response.message,
                            icon: 'success',
                        }, 3000)
                        setTimeout(function () {
                            window.location.href = 'contact';
                        }, 4000)
                    } else {
                        Swal.fire({
                            title: 'Enquiry not received',
                            text: response.message,
                            icon: 'error',
                        }, 3000)
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            })
        })
    })
</script>